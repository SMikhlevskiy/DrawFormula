<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/array_grad"
    android:orientation="vertical"
    tools:context="com.smikhlevskiy.formuladraw.ui.MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewFormula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/textFormula" />

        <Spinner
            android:id="@+id/spinnerLine"
            android:layout_marginLeft="12dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/editTextFormula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="50"
            android:text="@string/startFormula" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonDraw"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/roundedbutton"
            android:gravity="left|center_vertical"
            android:text="@string/drawGraph"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/beginGraph" />

        <EditText
            android:id="@+id/editTextXstart"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:ems="10"
            android:inputType="number"
            android:text="-10" >
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/endGraph" />

        <EditText
            android:id="@+id/editTextXend"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:ems="10"
            android:inputType="number"
            android:text="10" >
        </EditText>
    </LinearLayout>

    <com.smikhlevskiy.formuladraw.ui.GraphicView
        android:id="@+id/graphicView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >
    </com.smikhlevskiy.formuladraw.ui.GraphicView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonCalck"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/roundedbutton"
            android:gravity="left|center_vertical"
            android:text="@string/calculator"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/buttonRoot"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/roundedbutton"
            android:gravity="left|center_vertical"
            android:text="@string/findRoot"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/buttonCalcIntegral"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/roundedbutton"
            android:gravity="left|center_vertical"
            android:text="@string/calcIntegral"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewInfoBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonRegistration"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/roundedbutton"
            android:gravity="left|center_vertical"
            android:text="@string/registration"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewRegUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/notRegistredUser" />
    </LinearLayout>

</LinearLayout>